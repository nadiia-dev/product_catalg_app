datasource db {
  provider = "mysql"      
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image       String
  category    String
  price       Float
  availability Boolean
  slug        String   @unique
}
